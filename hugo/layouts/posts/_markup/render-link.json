{{ if strings.HasPrefix .Destination "http" }}
  <a href="{{ .Destination }}" {{ with .Title }}title="{{ . }}"{{ end }} target="_blank"><span>{{ .Text }}</span><span class="ex-link" /></a>
{{ else }}
  {{ if strings.HasPrefix .Destination "#" }}
    <a href="{{ .Destination }}"  {{ with .Title }}title="{{ . }}"{{ end }} >{{ .Text }}</a>
  {{ else }}
    <A {{ if strings.Contains .Destination "#" }} noScroll={false} {{ end }} href="{{ .Destination }}" {{ with .Title }}title="{{ . }}"{{ end }}>{{ .Text }}</A>
  {{ end }}
{{ end }}
