{{ $published := where (where .Data.Pages "Params.private" "!=" true)  "Params.isTranslation" "!=" true }}
{{ $terms := slice }}

{{ if eq .Type "category" }}
    {{ range .Site.Taxonomies.category }}
        {{ $terms = $terms | append (dict "title" .Page.Title "count" (where (where .Pages "Params.private" "!=" true) "Params.isTranslation" "!=" true | len)) }}
    {{ end }}
{{ else }}
    {{ range .Site.Taxonomies.tags }}
        {{ $terms = $terms | append (dict "title" .Page.Title "count" (where (where .Pages "Params.private" "!=" true) "Params.isTranslation" "!=" true | len)) }}
    {{ end }}
{{ end }}

{
  "term": "{{ .Title }}",
  "pages": {{ $terms | jsonify }}
}
